# Flask Security
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-minimum-32-characters-long

# Database
DATABASE_PATH=inventory.db

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
LOGIN_RATE_LIMIT=5 per minute
API_RATE_LIMIT=100 per minute

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT=300  # 5 minutes in seconds

# Application
DEBUG=False
HOST=0.0.0.0
PORT=5000

# Auto-Backup Configuration
AUTO_BACKUP_ENABLED=true  # Enable/disable automatic backups
BACKUP_INTERVAL_HOURS=24  # Backup interval in hours (default: 24 = daily)
KEEP_BACKUPS=30  # Number of backups to keep (default: 30)

# E-Mail Notification Configuration
NOTIFICATIONS_ENABLED=false  # Enable/disable email notifications
NOTIFICATION_EMAIL=your.email@example.com  # Email address for notifications
NOTIFICATION_CHECK_INTERVAL_HOURS=24  # Check interval in hours (default: 24 = daily)

# SMTP Configuration (for email notifications)
SMTP_SERVER=smtp.gmail.com  # SMTP server address
SMTP_PORT=587  # SMTP port (587 for TLS, 465 for SSL)
SMTP_USERNAME=your.email@gmail.com  # SMTP username
SMTP_PASSWORD=your-app-password  # SMTP password or app-specific password
SMTP_FROM_EMAIL=your.email@gmail.com  # From email address
SMTP_USE_TLS=true  # Use TLS encryption
